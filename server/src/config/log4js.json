{
  "appenders": {
    "console": {
      "type": "console",
      "compress": "true"
    },
    "access": {
      "type": "dateFile",
      "filename": "./log/access.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "app": {
      "type": "file",
      "filename": "./log/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3,
      "compress": "true"
    },
    "errorFile": {
      "type": "file",
      "filename": "./log/errors.log",
      "compress": "true"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    }
  },
  "categories": {
    "default": { "appenders": ["app", "console"], "level": "ALL" },
    "error": { "appenders": ["errors"], "level": "ERROR" },
    "http": { "appenders": ["access"], "level": "DEBUG" }
  }
}
